<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MAUIUsbSerial.SetPointConnect.MainScreen_MAUI">
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <!-- Header -->
            <Grid ColumnDefinitions="*,Auto" Background="Black" HeightRequest="70">
                <Label Text="Product Name PXR" TextColor="White" FontSize="24" VerticalOptions="Center" Margin="10,0,0,0" />
                <Image Source="icon_EatonLogo.png" HeightRequest="40" WidthRequest="120" VerticalOptions="Center" HorizontalOptions="End" Margin="0,0,10,0" />
            </Grid>

            <!-- Setpoint Set Selection -->
            <Frame BorderColor="Gray" BackgroundColor="#E8E8E8" Padding="10" IsVisible="true">
                <HorizontalStackLayout Spacing="20">
                    <Label Text="Change Working Set" FontAttributes="Bold" />
                    <RadioButton Content="A" GroupName="SetpointSet" />
                    <RadioButton Content="B" GroupName="SetpointSet" />
                    <RadioButton Content="C" GroupName="SetpointSet" />
                    <RadioButton Content="D" GroupName="SetpointSet" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Change Summary (CollectionView instead of DataGrid) -->
            <Label Text="Change Summary" FontAttributes="Bold" />
            <CollectionView x:Name="ChangeSummaryCollection" HeightRequest="120">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*">
                            <Label Text="{Binding ItemName}" />
                            <Label Text="{Binding OrigValue}" />
                            <Label Text="{Binding NewValue}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- TabView for Curves (stubbed) -->
            <toolkit:TabView>
                <toolkit:TabViewItem Text="i2t">
                    <VerticalStackLayout>
                        <Label Text="LS Chart (stub)" />
                    </VerticalStackLayout>
                </toolkit:TabViewItem>
                <toolkit:TabViewItem Text="LSIr">
                    <VerticalStackLayout>
                        <Label Text="LSIr Chart (stub)" />
                    </VerticalStackLayout>
                </toolkit:TabViewItem>
                <toolkit:TabViewItem Text="INSTIn">
                    <VerticalStackLayout>
                        <Label Text="INSTxIn Chart (stub)" />
                    </VerticalStackLayout>
                </toolkit:TabViewItem>
                <toolkit:TabViewItem Text="MMIn">
                    <VerticalStackLayout>
                        <Label Text="MMxIn Chart (stub)" />
                    </VerticalStackLayout>
                </toolkit:TabViewItem>
                <toolkit:TabViewItem Text="GroundInst">
                    <VerticalStackLayout>
                        <Label Text="GIChart (stub)" />
                    </VerticalStackLayout>
                </toolkit:TabViewItem>
            </toolkit:TabView>

            <!-- Action Buttons (stubbed) -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Save" Command="{Binding SaveCommand}" />
                <Button Text="Save As" Command="{Binding SaveAsCommand}" />
                <Button Text="Export" Command="{Binding ExportCommand}" />
                <Button Text="Refresh" Command="{Binding RefreshCommand}" />
                <Button Text="Cancel" Command="{Binding CancelCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
